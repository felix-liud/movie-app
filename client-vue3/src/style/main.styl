#app
  height 100vh
*
  box-sizing border-box
body
  font-family arial, -apple-system, BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', 'Microsoft YaHei', 'Source Han Sans SC', 'Noto Sans CJK SC', 'WenQuanYi Micro Hei', sans-serif
  font-size .16rem
html, body, #app
  size 100% 100%
body, html, menu, p, ul, ol, li, h1, h2, h3, h4, h5, h6, input, textarea
  padding 0
  margin 0
h1, h2, h3, h4, h5, h6, b, strong
  font-weight normal
em, i
  font-style normal
li
  list-style none
a
  color inherit
  text-decoration none
  &:hover, &:active, &:link
    text-decoration none
input
  font-size inherit
  border none
  outline none
textarea
  resize none
